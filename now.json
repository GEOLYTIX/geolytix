{
  "version": 2,
  "regions": ["lhr1", "sfo1"],
  "builds": [
    {
      "src": "/public/*",
      "use": "@now/static"
    },
    {
      "src": "/public/*/**",
      "use": "@now/static"
    },
    {
      "src": "/handler.js",
      "use": "@now/node",
      "config": {
        "includeFiles": "/public/*/**"
      }
    }
  ],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },  
  "trailingSlash": false,
  "rewrites": [
      {
          "source": "/",
          "destination": "/handler.js"
      },
      {
          "source": "/public/(.*)",
          "destination": "/public/$1"
      },

      {
          "source": "/(css|fonts|html|images|js)/(.*)",
          "destination": "/public/$1/$2"
      },
      {
          "source": "/(.*)",
          "destination": "/public/$1"
      }
  ]
}